<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.halley.mapper.ShoppingcartItemMapper">
    <update id="incItemCount">
        update shoppingcart_item set count = count + 1 where id = #{itemId}
    </update>

</mapper>
